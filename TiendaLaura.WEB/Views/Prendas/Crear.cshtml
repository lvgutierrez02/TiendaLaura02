@model TiendaLaura.Business.DTOs.PrendaDto

@{
    Layout = null;
}



<form asp-action="Crear" autocomplete="off" id="formulario" >

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <div class="form-group">
        <label asp-for="NombrePrenda" class="control-label"></label>
        <input asp-for="NombrePrenda" class="form-control" placeholder="Nombre prenda" />
        <span asp-validation-for="NombrePrenda" class="text-danger error"></span>
    </div>
   <br />
    <div class="form-group">
        <label asp-for="TipoPrendaId" class="control-label"></label>
        <select asp-items="@ViewBag.ListaTipoPrendas" asp-for="TipoPrendaId" class="form-control" placeholder="Tipo de prenda" >
            <option disabled>--- Seleccione ---</option>
        
        </select>
        <span asp-validation-for="TipoPrendaId" class="text-danger error"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="ColorId" class="control-label"></label>
        <select asp-for="ColorId" asp-items="@ViewBag.ListaColorPrendas"  class="form-control" placeholder="Color de la prenda" > 
            <option disabled>--- Seleccione ---</option>

        </select>
        <span asp-validation-for="ColorId" class="text-danger error"></span>
    </div>
    
    <br />
    <div class="form-group">
        <div class="col-md-6 offset-md-3">
            <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
        </div>
    </div>
</form>

<script src="~/js/site.js"></script>
@await Html.PartialAsync("_ValidationScriptsPartial")